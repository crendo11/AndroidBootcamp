<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTitle">
        <item name="android:fontFamily">@font/impact</item>
        <item name="android:textSize">@dimen/multiplier_50sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="header_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/impact</item>
        <item name="android:textSize">@dimen/multiplier_30</item>
    </style>

    <style name="text_input_hint">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/multiplier_8sp</item>
    </style>

    <style name="login_layout">
        <item name="android:paddingStart">@dimen/multiplier_30</item>
        <item name="android:paddingEnd">@dimen/multiplier_30</item>
        <item name="android:layout_marginVertical">@dimen/multiplier_20</item>
    </style>

    <style name="sign_in_method_button">
        <item name="android:layout_width">@dimen/multiplier_25</item>
        <item name="android:layout_height">@dimen/multiplier_25</item>
        <item name="android:layout_marginEnd">@dimen/multiplier_10</item>
        <item name="android:background">@drawable/circle_buttons_login</item>
    </style>

    <style name="secondary_text_size">
        <item name="android:textSize">@dimen/multiplier_8sp</item>
    </style>

    <style name="movie_description_margins">
        <item name="android:layout_marginStart">@dimen/multiplier_10</item>
    </style>

</resources>