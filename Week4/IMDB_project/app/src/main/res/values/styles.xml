<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTitle">
        <item name="android:fontFamily">@font/impact</item>
        <item name="android:textSize">@dimen/multiplier_50sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="header_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/impact</item>
        <item name="android:textSize">@dimen/multiplier_24sp</item>
    </style>

    <style name="app_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/multiplier_25</item>
        <item name="android:background">@drawable/rounded_corner_view</item>
    </style>

    <style name="text_input_hint">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/multiplier_8sp</item>
    </style>

    <style name="text_input_layout">
        <item name="android:paddingStart">@dimen/multiplier_30</item>
        <item name="android:paddingEnd">@dimen/multiplier_30</item>
    </style>

    <dimen name="multiplier_8sp">16sp</dimen>
</resources>